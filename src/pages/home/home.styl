.home-page
    background #141414
    min-height 100vh

    .list-films
        display flex
        flex-direction column
        align-items center

        .loader
            margin 30px
            width 35px
            height 35px
            border-top 2px solid #E5D200
            border-right 2px solid #ccc
            border-bottom 2px solid #ccc
            border-left 2px solid #ccc
            border-radius 50%
            animation spin 1s linear infinite

@keyframes spin
    from
        transform rotate(0)
    to
        transform rotate(360deg)

