.film
    width 100%
    display flex
    flex-direction column
    border-bottom 1px solid #333
    padding 20px 30px

    .film-info
        display flex
        align-items center
        justify-content space-between

        .info
            display flex
            flex-direction column

            b
                font-size 16px
                font-weight 700
                color #E5D200

            span
                font-size 14px
                margin-top 5px
                color #f0f0f0

            button
                border 1px solid #E5D200
                color #E5D200
                border-radius 5px
                padding 7px 14px
                font-size 14px
                transition .4s all ease

                &:hover
                    background #E5D200
                    color #141414

                + button
                    margin-top 5px

    .dropdown
        overflow hidden
        height 0
        transition .4s height ease

        .block
            width 100%
            display flex
            flex-direction column
            align-items flex-start
            margin-top 15px

            b
                color #E5D200
                font-weight 700

            ul
                margin-top 10px

                li
                    font-size 14px
                    color #f0f0f0
                    display flex
                    align-items center

                    &:before
                        content ''
                        width 7px
                        height 7px
                        border-radius 50%
                        background #f0f0f0
                        margin-right 10px

                    + li
                        margin-top 7px

