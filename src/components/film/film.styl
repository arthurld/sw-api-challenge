.film
    width 100%

    .film-info
        display flex
        padding 20px 30px
        align-items center
        justify-content space-between
        border-bottom 1px solid #333

        .info
            display flex
            flex-direction column

            b
                font-size 16px
                color #E5D200

            span
                font-size 14px
                margin-top 5px
                color #f0f0f0

            button
                border 1px solid #E5D200
                color #E5D200
                border-radius 5px
                padding 7px 14px
                font-size 14px
                transition .4s all ease

                &:hover
                    background #E5D200
                    color #141414

                + button
                    margin-top 5px
